<cache2k>

  <version>1.0</version>
  <!-- set to default, exception expected without cache creation -->
  <skipCheckOnStartup>false</skipCheckOnStartup>
  <ignoreMissingCacheConfiguration>true</ignoreMissingCacheConfiguration>

  <defaults>
    <cache>
      <loader>
        <bean>
          <type>org.cache2k.impl.xmlConfiguration.NotSerializable</type>
        </bean>
      </loader>
    </cache>
  </defaults>

</cache2k>